<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASPNetCoreWebApiBlogSiteProje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASPNetCoreWebApiBlogSiteProje.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("style", required: false)
</head>
<body class="arkaplan">
    @await Component.InvokeAsync("Categories")
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>
    @await Html.PartialAsync("_PartialFooter")
    <style>
        .arkaplan {
            background-color: #f5f5f5;
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
