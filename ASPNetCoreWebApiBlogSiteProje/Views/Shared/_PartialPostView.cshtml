@model IEnumerable<Post>


@foreach (var item in Model)
{
    <div class="col">
       
            <div class="card shadow-sm">
                 <a asp-controller="Posts" asp-action="Detail" asp-route-id="@item.Id" class="text-decoration-none kategoribaslik " >
                <div class="image-container">
                    <img src="/Images/@item.Image" class="img-thumbnail" />
                </div>
            </a>
                <div class="card-body">
                    <p class="card-text">
                        @item.Name
                    </p>
                    <div class="d-flex justify-content-between align-items-center">

                        <small class="text-body-secondary kategorirenk">@item.Category.Name</small>
                    </div>
                </div>
            </div>
        
    </div>
}
<link href="~/css/site.css" rel="stylesheet" />