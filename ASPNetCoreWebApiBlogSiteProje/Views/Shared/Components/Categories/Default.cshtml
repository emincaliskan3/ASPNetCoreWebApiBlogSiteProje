@model IEnumerable<Category> 
<div class="container">
    <header class="border-bottom lh-1 py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-4 ">
            </div>
            <div class="col-4 text-center ">
                <a class="blog-header-logo text-body-emphasis text-decoration-none text-d ustmenulogo " href="/">Blog</a>
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
                <form asp-controller="Posts" asp-action="Search" method="get" class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
                    <input name="q" type="search" class="form-control form-control-dark " placeholder="Ara..." aria-label="Search">
                </form>
                <a class="btn btn-sm btn-outline-secondary" href="#">Giriş</a>
            </div>
        </div>
    </header>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="nav-scroller py-1 mb-3 border-bottom">
                    <nav class="nav nav-underline justify-content-center">
                        <a class="nav-item nav-link link-body-emphasis" href="/Categories/Index/@item.Id">@item.Name</a>
                    </nav>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .nav-item {
        color: gray;
        font-weight: bolder;
        font-family: cursive;
    }

        .nav-item:hover {
            color: black;
            background-color: white;
        }

    .ustmenulogo {
        color: black;
        font-weight: bolder;
        font-family: cursive;
        font-size: 2.25em;
    }

        .ustmenulogo:hover {
            color: black;
        }
</style>